extends ../layout
block content
  a(href='/bicicletas') Volver
  br
  br
  br
  h1 Nueva bicicleta
  br
  br

  form(action='/bicicletas/update',method='post')
    label(for='id') ID:
        input#id(type='text' name='id' value=bici.id , readonly)
    br
    label(for='color') Color:
    select(name='color', id='', required)
      each val in [bici.color,'Blanco' , 'Negro' , 'Rojo','Verde']
        option=val
    //input#id(type='text' name='color', required)
    br
    label(for='modelo') Modelo:
    select(name='modelo', id='', required)
      each val in [bici.modelo,'Ruta' , 'Cross' , 'Montian','Turismo']
        option=val
    //input#id(type='text' name='modelo',required)
    br
    label(for='lat') Latitud:
    input#id(type='text' name='lat' value=bici.ubicacion[0],required)
    br
    label(for='lng') Longitud:
    input#id(type='text' name='lng' value=bici.ubicacion[1], required)
    br
    br
    input.btn(type='submit' name='OK' )
